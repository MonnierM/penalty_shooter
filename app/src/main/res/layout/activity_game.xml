<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Game">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="550dp"
        android:layout_height="400dp"
        android:layout_marginEnd="252dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/but"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="263dp"
        android:layout_marginStart="348dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="113dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:background="#50839192"
            android:text="1"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="113dp"
            android:layout_height="80dp"
            android:layout_marginLeft="120dp"
            android:background="#50839192"
            android:text="2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="113dp"
            android:layout_height="80dp"
            android:layout_marginLeft="236dp"
            android:background="#50839192"
            android:text="3"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="113dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="82dp"
            android:background="#50839192"
            android:text="4"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="113dp"
            android:layout_height="80dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="82dp"
            android:background="#50839192"
            android:text="5"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="113dp"
            android:layout_height="80dp"
            android:layout_marginLeft="236dp"
            android:layout_marginTop="82dp"
            android:background="#50839192"
            android:text="6"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="113dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="164dp"
            android:background="#50839192"
            android:text="7"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="113dp"
            android:layout_height="80dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="164dp"
            android:background="#50839192"
            android:text="8"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="113dp"
            android:layout_height="80dp"
            android:layout_marginLeft="236dp"
            android:layout_marginTop="164dp"
            android:background="#50839192"
            android:text="9"
            android:textColor="@color/black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Remaining \nshoots: "
        android:textColor="#B03A2E"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_remainingAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:hint="0"
        android:textColor="#B03A2E"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="16dp"
        android:textSize="21sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_result2"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:textSize="21sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/tv_result"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginEnd="260dp"
        android:layout_marginTop="16dp"
        android:text="Score: "
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="288dp"
        android:layout_marginTop="12dp"
        android:hint="0"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="320dp"
        android:layout_marginStart="380dp"
        android:text="CHOOSE YOUR SHOOTING TARGET!!"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>